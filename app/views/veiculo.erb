
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Attendance Dashboard | By Code Info</title>
  <link rel="stylesheet" href="/stylesheets/home.css" />
  <!-- Font Awesome Cdn Link -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>
</head>
<body>
  <div class="container">
    <nav>
      <ul>
        <li><a href="#" class="logo">
        
          <span class="nav-item">Admin</span>
        </a></li>
        <li><a href="/ordem_servico">
        <i class="fas fa-tasks"></i>
          <span class="nav-item">Ordem de Serviço</span>
        </a></li>
        <li><a href="/home">
        <i class="fas fa-tools"></i>
          <span class="nav-item">Seviço</span>
        </a></li>
        <li><a href="/funcionarios">
          <i class="fas fa-database"></i>
          <span class="nav-item">Funcionario</span>
        </a></li>
        <li><a href="/clientes">
        <i class="fas fa-address-card"></i>
          <span class="nav-item">Clientes</span>
        </a></li>
        <li><a href="/pecas">
        <i class="fas fa-wrench"></i>
          <span class="nav-item">Peças</span>
        </a></li>

        <li><a href="/veiculos">
        <i class="fas fa-car"></i>
          <span class="nav-item">Veiculos</span>
        </a></li>

        <li><a href="/equipe">
        <i class="fas fa-users"></i>
          <span class="nav-item">Equipes</span>
        </a></li>

        <li><a href="#" class="logout">
          <i class="fas fa-sign-out-alt"></i>
          <span class="nav-item">Log out</span>
        </a></li>
        
      </ul>
    </nav>


    <section class="main">
      <div class="main-top">
        <h1>Veiculos</h1>
        
      </div>

      <section class="attendance">
        <div class="attendance-list">
        <div class="Menu">
            <h1>Veiculos</h1>
            <a href="/cadastro_veiculo">
              <i class="fas fa-user-cog"></i>
              
            </a>
        </div>
          <table class="table">
            <thead>
              <tr>
                <th>Nome</th>
                <th>Cor</th>
                <th>Placa</th>
                <th>Modelo</th>
                <th>Quilometragem</th>
                <th>Excluir</th>
              </tr>
            </thead>
            <tbody>
            <% @veiculos.each do |veiculo| %>
              <tr>
                  <td><%= veiculo.Nome %></td>
                  <td><%= veiculo.Cor %></td>
                  <td><%= veiculo.Placa %></td>
                  <td><%= veiculo.Modelo %></td>
                  <td><%= veiculo.Quilometragem %></td>
                  <td>
                  <form action="/veiculos/<%= veiculo.id %>/excluir" method="post" onsubmit="return confirm('Tem certeza que deseja excluir este veículo?')">
                      <button type="submit">Excluir</button>
                  </form>
                  </td>
                  
              </tr>
          <% end %>


              
            </tbody>
          </table>
        </div>
      </section>
    </section>
  </div>

</body>
</html>